<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#13172c"
    android:padding="10dp"
    tools:context=".WelcomeScreen">

    <ImageView
        android:id="@+id/imageWelcome"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="2dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burevestnik"
        tools:ignore="ContentDescription,MissingConstraints" />

    <Button
        android:id="@+id/buttonWelcomeLogin"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Login"
        android:textStyle="bold"
        android:onClick="goLoginScreen"
        app:layout_constraintBottom_toTopOf="@+id/buttonWelcomeDiscord"
        app:layout_constraintEnd_toEndOf="@+id/buttonWelcomeDiscord"
        app:layout_constraintStart_toStartOf="@+id/buttonWelcomeDiscord"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/buttonWelcomeDiscord"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginBottom="52dp"
        android:onClick="goDiscord"
        android:gravity="center"
        android:padding="10dp"
        android:text="Discord"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/textWelcomeVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/textWelcomeVersion"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="version 1.0.0"
        android:textAlignment="center"
        android:textColor="#a6a8b5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,VisualLintBounds" />

    <TextView
        android:id="@+id/textWelcomeTitle"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Welcome to Burevestnik Store"
        android:textAlignment="center"
        android:textColor="#FDFDFD"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textWelcomeDescription"
        app:layout_constraintEnd_toEndOf="@+id/textWelcomeDescription"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textWelcomeDescription"
        tools:ignore="HardcodedText,MissingConstraints,VisualLintBounds" />

    <TextView
        android:id="@+id/textWelcomeDescription"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="More than 1000 customers worldwide!"
        android:textAlignment="center"
        android:textColor="#a6a8b5"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonWelcomeLogin"
        app:layout_constraintEnd_toEndOf="@+id/buttonWelcomeLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonWelcomeLogin"
        tools:ignore="HardcodedText,MissingConstraints,VisualLintBounds" />

</androidx.constraintlayout.widget.ConstraintLayout>
